---
interface Props {
  title: string;
  fatherImage: string;
  fatherName: string;
  motherImage: string;
  motherName: string;
  items: {
    title: string;
    price: number;
    sold: boolean;
  }[];
}

const { title, fatherImage, fatherName, motherImage, motherName, prices, sold, items } = Astro.props;
---
<div class="bg-stone-950 overflow-hidden rounded-lg p-8">
  <div>
    <h3 class="text-3xl text-center font-bold mb-4 font-wild text-amber-500">{title}</h3>
    
    <div class="grid grid-cols-2 gap-6 mb-6 font-logo">
      <div>
        <h4 class="text-lg font-semibold mb-2">Father: {fatherName}</h4>
        <img src={fatherImage} alt={fatherName} class="w-full object-cover rounded" />
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-2">Mother: {motherName}</h4>
        <img src={motherImage} alt={motherName} class="w-full object-cover rounded" />
      </div>
    </div>
    
    <div class="grid grid-cols-2 gap-4 mb-4 font-logo">
      {items.map((item, index) => (
        <div class="flex justify-between text-xl">
          <span>{item.title}:</span> 
          <span class={`font-bold ${item.sold ? 'text-red-500' : 'text-green-500'}`}>{item.sold ? 'SOLD' : `$${item.price}`}</span>
        </div>
      ))}
    </div>
  </div>
</div> 