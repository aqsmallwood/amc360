---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Contact Us">
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <div class="bg-stone-950 rounded-lg">
      <h1 class="text-4xl mb-12 text-center font-logo font-semibold py-2">CONTACT US</h1>
    </div>
    
    <div class="grid grid-cols-1 gap-12 items-start mx-auto max-w-2xl bg-stone-950 rounded-lg p-8 font-logo">
      <div>
        <p class="mb-6">We'd love to hear from you! Whether you're interested in one of our dogs or have questions about our breeding program, please don't hesitate to reach out.</p>
        
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="text-white mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold">Phone</h3>
              <p>(555) 123-4567</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="text-white mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold">Email</h3>
              <p>info@dogbreedingcompany.com</p>
            </div>
          </div>

        </div>
      </div>
      
      <ContactForm />
    </div>
  </div>
</Layout> 