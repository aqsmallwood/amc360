---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import SectionHeader from '../components/SectionHeader.astro';
import { getEntry } from 'astro:content';

const contact = await getEntry('contact', 'contact');
const { heading, phone, email } = contact.data;
---

<Layout title="Contact Us">
  <!-- Page Header -->
  <section class="pt-40 pb-20 px-8" style="background: #0a0a0a;">
    <SectionHeader
      label="Get in Touch"
      title="Contact Us"
    />
  </section>

  <!-- Contact Section -->
  <section class="py-20 px-8 relative" style="background: #0a0a0a;">
    <!-- Background gradient -->
    <div class="absolute inset-0 pointer-events-none" style="background: radial-gradient(ellipse at 80% 80%, rgba(201, 169, 98, 0.05) 0%, transparent 50%);"></div>

    <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-5 gap-16 relative">
      <!-- Contact Info -->
      <div class="lg:col-span-2">
        <h3 class="font-['Bebas_Neue',sans-serif] text-4xl tracking-wide mb-6">Let's Connect</h3>
        <p class="text-[#a0a0a0] leading-relaxed mb-8">
          {heading}
        </p>

        <div class="space-y-6">
          <!-- Phone -->
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 flex items-center justify-center border border-[#8b7355]" style="background: #111111;">
              <svg class="w-5 h-5 stroke-[#c9a962]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" />
              </svg>
            </div>
            <div>
              <div class="text-[10px] tracking-[0.2em] uppercase text-[#666666]">Phone</div>
              <div class="text-[#f5f5f5] text-lg">{phone}</div>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 flex items-center justify-center border border-[#8b7355]" style="background: #111111;">
              <svg class="w-5 h-5 stroke-[#c9a962]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                <polyline points="22,6 12,13 2,6" />
              </svg>
            </div>
            <div>
              <div class="text-[10px] tracking-[0.2em] uppercase text-[#666666]">Email</div>
              <div class="text-[#f5f5f5] text-lg">{email}</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-3">
        <ContactForm />
      </div>
    </div>
  </section>
</Layout>
