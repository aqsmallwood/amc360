---
import Layout from '../layouts/Layout.astro';
import BreedingCard from '../components/BreedingCard.astro';
import SectionHeader from '../components/SectionHeader.astro';
import { getCollection } from 'astro:content';

const breedings = await getCollection('breedings');
---

<Layout title="Breedings">
  <!-- Page Header -->
  <section class="pt-40 pb-20 px-8" style="background: #0a0a0a;">
    <SectionHeader
      label="Current Litters"
      title="Breedings"
      subtitle="Carefully planned pairings for exceptional offspring"
    />
  </section>

  <!-- Breedings List -->
  <section class="py-20 px-8" style="background: linear-gradient(180deg, #0a0a0a 0%, #0f0f0f 100%);">
    <div class="max-w-4xl mx-auto space-y-12">
      {breedings.map(breeding => (
        <BreedingCard
          title={breeding.data.title}
          fatherImage={breeding.data.fatherImage}
          fatherName={breeding.data.father}
          motherImage={breeding.data.motherImage}
          motherName={breeding.data.mother}
          items={breeding.data.items}
        />
      ))}
    </div>
  </section>
</Layout>
