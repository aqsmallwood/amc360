---
import Layout from '../layouts/Layout.astro';
import DogCard from '../components/DogCard.astro';
import SectionHeader from '../components/SectionHeader.astro';
import { getCollection } from 'astro:content';

const femaleDogs = await getCollection('dogs', ({ id }) => {
  return id.startsWith('females/');
}).then(dogs => dogs.sort((a, b) => (a.data.order || 0) - (b.data.order || 0)));
---

<Layout title="Female Dogs">
  <!-- Page Header -->
  <section class="pt-40 pb-20 px-8" style="background: #0a0a0a;">
    <SectionHeader
      label="Meet the Pack"
      title="Our Females"
      subtitle="Exceptional bloodlines, outstanding temperament, and remarkable structure"
    />
  </section>

  <!-- Dogs Grid -->
  <section class="py-20 px-8" style="background: #0a0a0a;">
    <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      {femaleDogs.map(dog => (
        <DogCard
          name={dog.data.name}
          longAlias={dog.data.longAlias}
          image={dog.data.image}
          weight={dog.data.weight}
          headSize={dog.data.headSize}
          height={dog.data.height}
          stillGrowing={dog.data.stillGrowing}
          body={dog}
          url={`/females/${dog.slug}`}
        />
      ))}
    </div>
  </section>
</Layout>
