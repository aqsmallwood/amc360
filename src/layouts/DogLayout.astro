---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
const { name, longAlias, image, weight, headSize, height, stillGrowing } = frontmatter;
---

<Layout title={name}>
  <!-- Back Navigation -->
  <div class="pt-32 pb-8 px-8" style="background: #0a0a0a;">
    <div class="max-w-6xl mx-auto">
      <a href="javascript:history.back()" class="inline-flex items-center gap-2 text-[#a0a0a0] hover:text-[#c9a962] transition-colors duration-300 text-sm tracking-[0.1em] uppercase">
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back
      </a>
    </div>
  </div>

  <!-- Dog Detail -->
  <section class="pb-32 px-8" style="background: #0a0a0a;">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
        <!-- Image -->
        <div class="relative">
          <img
            src={image}
            alt={name}
            class="w-full aspect-square object-cover border border-[#8b7355]"
          />
          {stillGrowing && (
            <div class="absolute top-6 right-6 px-4 py-2 text-xs tracking-[0.1em] uppercase font-bold" style="background: linear-gradient(135deg, #c9a962 0%, #e8d5a3 50%, #c9a962 100%); color: #0a0a0a;">
              Still Growing
            </div>
          )}
          <div class="absolute top-8 left-8 right-[-2rem] bottom-[-2rem] border border-[#c9a962] opacity-30 pointer-events-none -z-10"></div>
        </div>

        <!-- Info -->
        <div>
          <span class="inline-block text-[#c9a962] text-xs tracking-[0.3em] uppercase mb-4">
            360 American Bully Club
          </span>
          <h1 class="font-['Bebas_Neue',sans-serif] text-6xl tracking-wide text-[#c9a962] mb-2">
            {longAlias}
          </h1>
          <p class="font-['Cormorant_Garamond',serif] text-xl text-[#666666] italic mb-12">
            {name}
          </p>

          <!-- Stats -->
          <div class="grid grid-cols-2 gap-4 mb-12">
            {weight !== -1 && (
              <div class="p-6 border border-[#1a1a1a]" style="background: #111111;">
                <div class="text-[10px] tracking-[0.2em] uppercase text-[#666666] mb-2">Weight</div>
                <div class="font-['Bebas_Neue',sans-serif] text-3xl text-[#f5f5f5]">{weight} lbs</div>
              </div>
            )}
            {headSize !== -1 && (
              <div class="p-6 border border-[#1a1a1a]" style="background: #111111;">
                <div class="text-[10px] tracking-[0.2em] uppercase text-[#666666] mb-2">Head Size</div>
                <div class="font-['Bebas_Neue',sans-serif] text-3xl text-[#f5f5f5]">{headSize}"</div>
              </div>
            )}
            {height !== -1 && (
              <div class="p-6 border border-[#1a1a1a]" style="background: #111111;">
                <div class="text-[10px] tracking-[0.2em] uppercase text-[#666666] mb-2">Height</div>
                <div class="font-['Bebas_Neue',sans-serif] text-3xl text-[#f5f5f5]">{height}"</div>
              </div>
            )}
            <div class="p-6 border border-[#1a1a1a]" style="background: #111111;">
              <div class="text-[10px] tracking-[0.2em] uppercase text-[#666666] mb-2">Status</div>
              <div class="font-['Bebas_Neue',sans-serif] text-3xl text-[#f5f5f5]">
                {stillGrowing ? 'Growing' : 'Mature'}
              </div>
            </div>
          </div>

          <!-- Description -->
          <div class="prose prose-invert prose-p:text-[#a0a0a0] prose-p:leading-relaxed max-w-none">
            <slot />
          </div>

          <!-- CTA -->
          <div class="mt-12">
            <a href="/contact" class="btn btn-primary">
              Inquire About {name}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
